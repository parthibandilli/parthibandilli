#same number in triangle pattern
r=int(input("enter number of row needed:"))
for i in range(1, r):
   for j in range(1, i+1):
       print(i, end=" ")
   print( )
   
#same number in ascending order   
n=6
for i in range(1,n):
   for j in range(i,n):
     print(i,end="")
   print()
    
#same number in triangle shape
a=4
b=0
for i in range(0,a):
   for j in range(0,a-i-1):
       print(" ",end=" ")
   for j in range(0,i*2+1):
       b=i+1;
       print(b,end=" ")
   print()
    
    
